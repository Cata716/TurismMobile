<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TurismMobile.Views.TourDetailsPage"
             Title="Detalii Tur"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Frame BackgroundColor="White" CornerRadius="15" HasShadow="True" Padding="20">
                <VerticalStackLayout Spacing="12">
                    <Label x:Name="TitleLabel" 
                           FontSize="24" 
                           FontAttributes="Bold"
                           TextColor="#333333"
                           LineBreakMode="WordWrap"/>

                    <Label x:Name="LocationLabel" 
                           FontSize="16"
                           TextColor="#666666"/>

                    <Label x:Name="DatesLabel" 
                           FontSize="14"
                           TextColor="#666666"/>

                    <BoxView HeightRequest="1" BackgroundColor="#E0E0E0" Margin="0,10"/>

                    <Label x:Name="DescriptionLabel" 
                           FontSize="14"
                           TextColor="#333333"
                           LineBreakMode="WordWrap"
                           Margin="0,5,0,10"/>

                    <Label x:Name="PriceLabel" 
                           FontSize="22" 
                           FontAttributes="Bold"
                           TextColor="#2196F3"
                           Margin="0,5,0,0"/>
                </VerticalStackLayout>
            </Frame>

            <Label Text="Recenzii" 
                   FontSize="20" 
                   FontAttributes="Bold"
                   TextColor="#333333"
                   Margin="0,10,0,5"/>

            <VerticalStackLayout x:Name="ReviewsContainer" Spacing="10"/>

            <Button Text="+ ADAUGÄ‚ RECENZIE"
                    Clicked="OnAddReviewClicked"
                    BackgroundColor="#FF9800"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="45"
                    FontSize="14"
                    FontAttributes="Bold"/>

            <Button Text="REZERVÄ‚ ACUM"
                    Clicked="OnReserveClicked"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="55"
                    FontSize="16"
                    FontAttributes="Bold"
                    Margin="0,5,0,0"/>

            <Grid x:Name="AdminButtons" 
                  ColumnDefinitions="*,*"
                  ColumnSpacing="10" 
                  IsVisible="False"
                  Margin="0,5,0,0">
                <Button Grid.Column="0"
                        Text="âœï¸ EDITEAZÄ‚"
                        Clicked="OnEditClicked"
                        BackgroundColor="#2196F3"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="45"
                        FontSize="15"
                        FontAttributes="Bold"/>

                <Button Grid.Column="1"
                        Text="ðŸ—‘ï¸ È˜TERGE"
                        Clicked="OnDeleteClicked"
                        BackgroundColor="#F44336"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="45"
                        FontSize="15"
                        FontAttributes="Bold"/>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
   