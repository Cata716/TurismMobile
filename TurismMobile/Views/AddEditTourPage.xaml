<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=netstandard"
             x:Class="TurismMobile.Views.AddEditTourPage"
             Title="Adaugă/Editează Tur"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Detalii Tur" 
                   FontSize="24" 
                   FontAttributes="Bold"
                   TextColor="#333333"/>

            <Frame BackgroundColor="White" CornerRadius="10" HasShadow="True" Padding="0">
                <Entry x:Name="TitleEntry" 
                       Placeholder="Titlu tur"
                       TextColor="#333333"
                       Margin="15,10"/>
            </Frame>

            <Frame BackgroundColor="White" CornerRadius="10" HasShadow="True" Padding="0">
                <Editor x:Name="DescriptionEditor" 
                        Placeholder="Descriere"
                        HeightRequest="120"
                        TextColor="#333333"
                        Margin="15,10"/>
            </Frame>

            <Frame BackgroundColor="White" CornerRadius="10" HasShadow="True" Padding="0">
                <Entry x:Name="PriceEntry" 
                       Placeholder="Preț (RON)"
                       Keyboard="Numeric"
                       TextColor="#333333"
                       Margin="15,10"/>
            </Frame>

            <Label Text="Data Start:" FontSize="14" TextColor="#666666"/>
            <Frame BackgroundColor="White" CornerRadius="10" HasShadow="True" Padding="10">
                <DatePicker x:Name="StartDatePicker" 
                            MinimumDate="{x:Static sys:DateTime.Now}"
                            TextColor="#333333"/>
            </Frame>

            <Label Text="Data Sfârșit:" FontSize="14" TextColor="#666666"/>
            <Frame BackgroundColor="White" CornerRadius="10" HasShadow="True" Padding="10">
                <DatePicker x:Name="EndDatePicker" 
                            MinimumDate="{x:Static sys:DateTime.Now}"
                            TextColor="#333333"/>
            </Frame>

            <Label Text="Locație:" FontSize="14" TextColor="#666666"/>
            <Frame BackgroundColor="White" CornerRadius="10" HasShadow="True" Padding="0">
                <Picker x:Name="LocationPicker" 
                        Title="Selectează locația"
                        TextColor="#333333"
                        Margin="15,10"/>
            </Frame>

            <Frame BackgroundColor="White" CornerRadius="10" HasShadow="True" Padding="15">
                <HorizontalStackLayout Spacing="10">
                    <Label Text="Tur Disponibil:"
                           TextColor="#333333"
                           FontSize="16"
                           FontAttributes="Bold"
                           VerticalOptions="Center"/>
                    <Switch x:Name="IsAvailableSwitch" 
                            IsToggled="True"
                            OnColor="#4CAF50"
                            ThumbColor="#F5F5F5"/>
                </HorizontalStackLayout>
            </Frame>

            <Label x:Name="ErrorLabel" 
                   Text="" 
                   TextColor="Red" 
                   IsVisible="False"
                   FontSize="14"/>

            <Button Text="SALVEAZĂ"
                    Clicked="OnSaveClicked"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"
                    FontSize="16"
                    FontAttributes="Bold"
                    Margin="0,10,0,0"/>

            <Button Text="ANULEAZĂ"
                    Clicked="OnCancelClicked"
                    BackgroundColor="#F44336"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"
                    FontSize="16"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>