<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TurismMobile.Views.AddEditLocationPage"
             Title="Adaugă/Editează Locație"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Detalii Locație" 
                   FontSize="24" 
                   FontAttributes="Bold"
                   TextColor="#333333"/>

            <Frame BackgroundColor="White" CornerRadius="10" HasShadow="True" Padding="0">
                <Entry x:Name="NameEntry" 
                       Placeholder="Nume locație"
                       TextColor="#333333"
                       Margin="15,10"/>
            </Frame>

            <Frame BackgroundColor="White" CornerRadius="10" HasShadow="True" Padding="0">
                <Entry x:Name="CountryEntry" 
                       Placeholder="Țară"
                       TextColor="#333333"
                       Margin="15,10"/>
            </Frame>

            <Frame BackgroundColor="White" CornerRadius="10" HasShadow="True" Padding="0">
                <Editor x:Name="DescriptionEditor" 
                        Placeholder="Descriere"
                        HeightRequest="150"
                        TextColor="#333333"
                        Margin="15,10"/>
            </Frame>

            <Label x:Name="ErrorLabel" 
                   Text="" 
                   TextColor="Red" 
                   IsVisible="False"
                   FontSize="14"/>

            <Button Text="SALVEAZĂ"
                    Clicked="OnSaveClicked"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"
                    FontSize="16"
                    FontAttributes="Bold"
                    Margin="0,10,0,0"/>

            <Button Text="ANULEAZĂ"
                    Clicked="OnCancelClicked"
                    BackgroundColor="#F44336"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"
                    FontSize="16"/>

            <Button x:Name="DeleteButton"
                    Text="ȘTERGE LOCAȚIE"
                    Clicked="OnDeleteClicked"
                    BackgroundColor="#9E9E9E"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="45"
                    IsVisible="False"
                    Margin="0,20,0,0"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>