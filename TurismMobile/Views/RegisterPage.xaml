<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TurismMobile.Views.RegisterPage"
             Title="Înregistrare"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="15">

            <Label Text="Creează cont nou" 
                   FontSize="28" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center"
                   TextColor="#333333"
                   Margin="0,20,0,20"/>

            <Frame BackgroundColor="White" CornerRadius="10" HasShadow="True" Padding="0">
                <Entry x:Name="FirstNameEntry" 
                       Placeholder="Prenume"
                       TextColor="#333333"
                       Margin="15,10"/>
            </Frame>

            <Frame BackgroundColor="White" CornerRadius="10" HasShadow="True" Padding="0">
                <Entry x:Name="LastNameEntry" 
                       Placeholder="Nume"
                       TextColor="#333333"
                       Margin="15,10"/>
            </Frame>

            <Frame BackgroundColor="White" CornerRadius="10" HasShadow="True" Padding="0">
                <Entry x:Name="EmailEntry" 
                       Placeholder="Email"
                       Keyboard="Email"
                       TextColor="#333333"
                       Margin="15,10"/>
            </Frame>

            <Frame BackgroundColor="White" CornerRadius="10" HasShadow="True" Padding="0">
                <Entry x:Name="PhoneEntry" 
                       Placeholder="Telefon (opțional)"
                       Keyboard="Telephone"
                       TextColor="#333333"
                       Margin="15,10"/>
            </Frame>

            <Frame BackgroundColor="White" CornerRadius="10" HasShadow="True" Padding="0">
                <Entry x:Name="PasswordEntry" 
                       Placeholder="Parolă (minim 6 caractere)"
                       IsPassword="True"
                       TextColor="#333333"
                       Margin="15,10"/>
            </Frame>

            <Frame BackgroundColor="White" CornerRadius="10" HasShadow="True" Padding="0">
                <Entry x:Name="ConfirmPasswordEntry" 
                       Placeholder="Confirmă parola"
                       IsPassword="True"
                       TextColor="#333333"
                       Margin="15,10"/>
            </Frame>

            <Label x:Name="ErrorLabel" 
                   Text="" 
                   TextColor="Red" 
                   IsVisible="False"
                   FontSize="14"/>

            <Button Text="ÎNREGISTRARE" 
                    Clicked="OnRegisterClicked"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"
                    FontSize="16"
                    FontAttributes="Bold"
                    Margin="0,10,0,0"/>

            <Button Text="Am deja cont - Autentificare" 
                    Clicked="OnBackToLoginClicked"
                    BackgroundColor="Transparent"
                    TextColor="#2196F3"
                    FontSize="14"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>