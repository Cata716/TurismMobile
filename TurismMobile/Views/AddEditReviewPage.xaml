<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TurismMobile.Views.AddEditReviewPage"
             Title="Adaugă Recenzie"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Lasă o recenzie" 
                   FontSize="24" 
                   FontAttributes="Bold"
                   TextColor="#333333"/>

            <Label x:Name="TourNameLabel" 
                   FontSize="16"
                   TextColor="#666666"/>

            <Label Text="Evaluare:" FontSize="16" TextColor="#666666" Margin="0,10,0,0"/>
            <Frame BackgroundColor="White" CornerRadius="10" HasShadow="True" Padding="20">
                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Button x:Name="Star1" Text="⭐" Clicked="OnStarClicked" 
                            BackgroundColor="Transparent" FontSize="40"/>
                    <Button x:Name="Star2" Text="⭐" Clicked="OnStarClicked" 
                            BackgroundColor="Transparent" FontSize="40"/>
                    <Button x:Name="Star3" Text="⭐" Clicked="OnStarClicked" 
                            BackgroundColor="Transparent" FontSize="40"/>
                    <Button x:Name="Star4" Text="⭐" Clicked="OnStarClicked" 
                            BackgroundColor="Transparent" FontSize="40"/>
                    <Button x:Name="Star5" Text="⭐" Clicked="OnStarClicked" 
                            BackgroundColor="Transparent" FontSize="40"/>
                </HorizontalStackLayout>
            </Frame>

            <Label x:Name="RatingLabel" 
                   Text="Selectează evaluarea"
                   FontSize="14"
                   TextColor="#FF9800"
                   HorizontalOptions="Center"/>

            <!-- Comment -->
            <Label Text="Comentariu (opțional):" FontSize="16" TextColor="#666666" Margin="0,10,0,0"/>
            <Frame BackgroundColor="White" CornerRadius="10" HasShadow="True" Padding="0">
                <Editor x:Name="CommentEditor" 
                        Placeholder="Scrie un comentariu despre experiența ta..."
                        HeightRequest="150"
                        TextColor="#333333"
                        Margin="15,10"/>
            </Frame>

            <Label x:Name="ErrorLabel" 
                   Text="" 
                   TextColor="Red" 
                   IsVisible="False"
                   FontSize="14"/>

            <Button Text="TRIMITE RECENZIE"
                    Clicked="OnSubmitClicked"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"
                    FontSize="16"
                    FontAttributes="Bold"
                    Margin="0,10,0,0"/>

            <Button Text="ANULEAZĂ"
                    Clicked="OnCancelClicked"
                    BackgroundColor="#9E9E9E"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"
                    FontSize="16"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
