<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TurismMobile.MainPage"
             Title="Dashboard"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Frame BackgroundColor="#2196F3" 
                   CornerRadius="15" 
                   HasShadow="True" 
                   Padding="20"
                   Margin="0,0,0,10">
                <VerticalStackLayout Spacing="8">
                    <Label x:Name="WelcomeLabel" 
                           Text="Bine ai venit!" 
                           FontSize="26" 
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"/>
                    <Label x:Name="UserRoleLabel" 
                           Text="Rol: User" 
                           FontSize="15"
                           TextColor="White"
                           HorizontalOptions="Center"
                           Opacity="0.9"/>
                </VerticalStackLayout>
            </Frame>

            <Label Text="Meniu Principal" 
                   FontSize="20" 
                   FontAttributes="Bold"
                   TextColor="#333333"
                   Margin="0,10,0,5"/>

            <Grid RowDefinitions="Auto,Auto" 
                  ColumnDefinitions="*,*" 
                  RowSpacing="15" 
                  ColumnSpacing="15">

                <Frame Grid.Row="0" Grid.Column="0" 
                       BackgroundColor="White" 
                       CornerRadius="15" 
                       HasShadow="True" 
                       Padding="15">
                    <Grid RowDefinitions="Auto,Auto,Auto,Auto">
                        <Frame Grid.Row="0" 
                               BackgroundColor="#E3F2FD"
                               CornerRadius="40"
                               WidthRequest="70"
                               HeightRequest="70"
                               HorizontalOptions="Center"
                               Padding="0"
                               HasShadow="False"
                               Margin="0,5,0,10">
                            <Label Text="🗾" 
                                   FontSize="36" 
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   TextColor="#2196F3"/>
                        </Frame>

                        <Label Grid.Row="1" 
                               Text="Tururi" 
                               FontSize="18" 
                               FontAttributes="Bold" 
                               HorizontalOptions="Center"
                               TextColor="#333333"/>
                        <Label Grid.Row="2" 
                               Text="Descoperă destinații" 
                               FontSize="12" 
                               HorizontalOptions="Center"
                               TextColor="#666666"
                               Margin="0,5,0,10"/>
                        <Button Grid.Row="3"
                                Text="Vezi Tururi" 
                                Clicked="OnToursClicked"
                                BackgroundColor="#2196F3"
                                TextColor="White"
                                CornerRadius="10"
                                HeightRequest="40"
                                FontSize="14"
                                FontAttributes="Bold"/>
                    </Grid>
                </Frame>

                <Frame Grid.Row="0" Grid.Column="1" 
                       BackgroundColor="White" 
                       CornerRadius="15" 
                       HasShadow="True" 
                       Padding="15">
                    <Grid RowDefinitions="Auto,Auto,Auto,Auto">
                        <Frame Grid.Row="0" 
                               BackgroundColor="#E8F5E9"
                               CornerRadius="40"
                               WidthRequest="70"
                               HeightRequest="70"
                               HorizontalOptions="Center"
                               Padding="0"
                               HasShadow="False"
                               Margin="0,5,0,10">
                            <Label Text="📌" 
                                   FontSize="36" 
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   TextColor="#4CAF50"/>
                        </Frame>

                        <Label Grid.Row="1" 
                               Text="Locații" 
                               FontSize="18" 
                               FontAttributes="Bold" 
                               HorizontalOptions="Center"
                               TextColor="#333333"/>
                        <Label Grid.Row="2" 
                               Text="Explorează orașe" 
                               FontSize="12" 
                               HorizontalOptions="Center"
                               TextColor="#666666"
                               Margin="0,5,0,10"/>
                        <Button Grid.Row="3"
                                Text="Vezi Locații" 
                                Clicked="OnLocationsClicked"
                                BackgroundColor="#4CAF50"
                                TextColor="White"
                                CornerRadius="10"
                                HeightRequest="40"
                                FontSize="14"
                                FontAttributes="Bold"/>
                    </Grid>
                </Frame>

                <Frame Grid.Row="1" Grid.Column="0" 
                       BackgroundColor="White" 
                       CornerRadius="15" 
                       HasShadow="True" 
                       Padding="15">
                    <Grid RowDefinitions="Auto,Auto,Auto,Auto">
                        <Frame Grid.Row="0" 
                               BackgroundColor="#FFF3E0"
                               CornerRadius="40"
                               WidthRequest="70"
                               HeightRequest="70"
                               HorizontalOptions="Center"
                               Padding="0"
                               HasShadow="False"
                               Margin="0,5,0,10">
                            <Label Text="📆" 
                                   FontSize="36" 
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   TextColor="#FF9800"/>
                        </Frame>

                        <Label Grid.Row="1" 
                               Text="Rezervări" 
                               FontSize="18" 
                               FontAttributes="Bold" 
                               HorizontalOptions="Center"
                               TextColor="#333333"/>
                        <Label Grid.Row="2" 
                               Text="Rezervările tale" 
                               FontSize="12" 
                               HorizontalOptions="Center"
                               TextColor="#666666"
                               Margin="0,5,0,10"/>
                        <Button Grid.Row="3"
                                Text="Vezi Rezervări" 
                                Clicked="OnReservationsClicked"
                                BackgroundColor="#FF9800"
                                TextColor="White"
                                CornerRadius="10"
                                HeightRequest="40"
                                FontSize="14"
                                FontAttributes="Bold"/>
                    </Grid>
                </Frame>

                <!-- Admin Panel (vizibil doar pentru admin) -->
                <Frame x:Name="AdminFrame"
                       Grid.Row="1" Grid.Column="1" 
                       BackgroundColor="White" 
                       CornerRadius="15" 
                       HasShadow="True" 
                       Padding="15"
                       IsVisible="False">
                    <Grid RowDefinitions="Auto,Auto,Auto,Auto">
                        <Frame Grid.Row="0" 
                               BackgroundColor="#F3E5F5"
                               CornerRadius="40"
                               WidthRequest="70"
                               HeightRequest="70"
                               HorizontalOptions="Center"
                               Padding="0"
                               HasShadow="False"
                               Margin="0,5,0,10">
                            <Label Text="⚙" 
                                   FontSize="36" 
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   TextColor="#9C27B0"/>
                        </Frame>

                        <Label Grid.Row="1" 
                               Text="Administrare" 
                               FontSize="18" 
                               FontAttributes="Bold" 
                               HorizontalOptions="Center"
                               TextColor="#333333"/>
                        <Label Grid.Row="2" 
                               Text="Panou admin" 
                               FontSize="12" 
                               HorizontalOptions="Center"
                               TextColor="#666666"
                               Margin="0,5,0,10"/>
                        <Button Grid.Row="3"
                                Text="Acces Admin" 
                                Clicked="OnAdminClicked"
                                BackgroundColor="#9C27B0"
                                TextColor="White"
                                CornerRadius="10"
                                HeightRequest="40"
                                FontSize="14"
                                FontAttributes="Bold"/>
                    </Grid>
                </Frame>

                <Frame x:Name="ProfileFrame"
                       Grid.Row="1" Grid.Column="1" 
                       BackgroundColor="White" 
                       CornerRadius="15" 
                       HasShadow="True" 
                       Padding="15"
                       IsVisible="True">
                    <Grid RowDefinitions="Auto,Auto,Auto,Auto">
                        <Frame Grid.Row="0" 
                               BackgroundColor="#ECEFF1"
                               CornerRadius="40"
                               WidthRequest="70"
                               HeightRequest="70"
                               HorizontalOptions="Center"
                               Padding="0"
                               HasShadow="False"
                               Margin="0,5,0,10">
                            <Label Text="👨" 
                                   FontSize="36" 
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   TextColor="#607D8B"/>
                        </Frame>

                        <Label Grid.Row="1" 
                               Text="Profil" 
                               FontSize="18" 
                               FontAttributes="Bold" 
                               HorizontalOptions="Center"
                               TextColor="#333333"/>
                        <Label Grid.Row="2" 
                               Text="Contul meu" 
                               FontSize="12" 
                               HorizontalOptions="Center"
                               TextColor="#666666"
                               Margin="0,5,0,10"/>
                        <Button Grid.Row="3"
                                Text="Vezi Profil" 
                                Clicked="OnProfileClicked"
                                BackgroundColor="#607D8B"
                                TextColor="White"
                                CornerRadius="10"
                                HeightRequest="40"
                                FontSize="14"
                                FontAttributes="Bold"/>
                    </Grid>
                </Frame>

            </Grid>

            <Button Clicked="OnLogoutClicked"
                    BackgroundColor="#F44336"
                    TextColor="White"
                    CornerRadius="12"
                    HeightRequest="55"
                    FontSize="16"
                    FontAttributes="Bold"
                    Margin="0,10,0,20">
                <Button.ImageSource>
                    <FontImageSource Glyph="🚪" FontFamily="Segoe UI Emoji" Size="20" Color="White"/>
                </Button.ImageSource>
                <Button.Text>DECONECTARE</Button.Text>
            </Button>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
